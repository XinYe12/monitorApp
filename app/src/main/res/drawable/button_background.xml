<!-- res/drawable/button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button in its normal state -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Set the background color -->
            <corners android:radius="18dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Button in its pressed (clicked) state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/design_default_color_primary_dark" /> <!-- Set the background color when pressed -->
            <corners android:radius="18dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
